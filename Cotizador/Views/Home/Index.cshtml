                    <option value="">-- Seleccione --</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="model" class="form-label">Modelo</label>
                <select class="form-control" id="model">
                    <option value="">-- Seleccione --</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                </select>
            </div>
